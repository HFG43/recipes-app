<%= form_with(model: @recipe_food, url: recipe_recipe_food_path(@recipe, @recipe_food), html: { class: "recipe-edit-form" }) do |form| %>
  <div class="form-group">
    <%= form.label :food_id, "Selected Ingredient"%>
    <%= form.text_field(:food_id, value: @recipe_food.food.name, class: "form-control") %>
  </div>

  <div class="form-group">
    <%= form.label "Define quantity for the ingredient "%>
    <%= form.number_field :quantity, min: 1, class: "form-control" %>
  </div>
  
  <%= form.submit "Update quantities", class: "btn btn-primary" %>
<% end %>
